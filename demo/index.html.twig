<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link rel="stylesheet" href="{{ global.request.basepath }}/bootstrap/dist/css/bootstrap.min.css"/>
<script type="text/javascript" src="{{ global.request.basepath }}/bootstrap/dist/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="{{ global.request.basepath }}/font-awesome/css/font-awesome.min.css"/>

<style type="text/css">
    a.asc:after {
        content: " \f0d8 ";
        font-family: FontAwesome;
    }
    a.desc:after {
        content: " \f0d7";
        font-family: FontAwesome;
    }
</style>

<div class="container-fluid">
    <div class="clearfix">
        <h2 class="pull-left">Demo of <a href="https://github.com/ttskch/PaginationServiceProvider">PaginationServiceProvider</a></h2>
        <ul class="list-inline pull-right" style="margin-top: 20px;">
            <li><a class="btn btn-link" href="{{ global.request.basepath }}/index.php">Paginate Array</a></li>
            <li><a class="btn btn-link" href="{{ global.request.basepath }}/index.php/dbal">Paginate DBAL Query</a></li>
        </ul>
    </div>
    <hr/>

    <div class="pull-left">
        {{ knp_pagination_render(pagination) }}
    </div>

    <div class="pull-right">
        {{ knp_pagination_filter(pagination, { id: 'Id', value: 'Value' }) }}
    </div>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'Id', 'id') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Value', 'value') }}</th>
        </tr>
        </thead>
        <tbody>
        {% for row in pagination %}
            <tr>
                {% for item in row %}
                    <td>{{ item }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
